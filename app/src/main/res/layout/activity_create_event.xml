<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CreateEventActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/action_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimaryDark"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        tools:ignore="MissingConstraints">
        <TextView
                android:id="@+id/toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Criar Evento"
            android:gravity="center"
            android:textAlignment="viewStart"
            android:textSize="20sp"
            tools:ignore="RtlCompat" />
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
        app:layout_constraintHorizontal_bias="0.487" android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar" android:orientation="vertical">
        <EditText
            android:id="@+id/event_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Nome do Evento"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inicio:"
            android:textColor="#000000"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/start_date"
            android:layout_width="match_parent"
            android:layout_height=  "wrap_content"
            android:text="Selecione a data de inicio"
            android:textSize="18sp"
            android:onClick="setDateOnClick"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fim:"
            android:textColor="#000000"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/end_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecione a data de fim"
            android:onClick="setDateOnClick"
            android:textSize="18sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_repeat_24" />
            <Spinner
                android:id="@+id/repeticao_dropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_access_alarm_24" />
            <TextView
                    android:id="@+id/alarm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nenhum alarme selecionado"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:onClick="setAlarmOnClick"
                />
        </LinearLayout>
        <EditText
            android:id="@+id/event_location_input"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Local"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
            <ImageView
                    android:id="@+id/importance_square"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_square_low" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ImportÃ¢ncia"
                android:textColor="#000000"
                android:textSize="18sp"
                android:onClick="setImportanceOnClick"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/save_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_margin="16dp"
        android:text="Salvar"
        android:onClick="saveEvent"
        app:layout_constraintBottom_toTopOf="@id/cancelar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.2"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
    />
    <Button
        android:id="@+id/cancelar"
        android:layout_width="match_parent"
        android:onClick="cancelEvent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_margin="16dp"
        android:text="Cancelar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.2"
        android:background="@color/colorPrimaryLight"
        android:textColor="@color/colorPrimaryDark"
        />
    <Button
            android:id="@+id/delete"
            android:layout_width="match_parent"
            android:onClick="deleteEvent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="16dp"
            android:text="deletar"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@id/save_event"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.2"
            android:background="#FF0000"
            android:textColor="@color/white"
    />
</androidx.constraintlayout.widget.ConstraintLayout>